//default properties
.section-dark, 
.section-white
  width 100%
  height 100vh
  text-align center
  .section-container
    width 600px
    margin 0 auto
    img 
      margin-bottom 40px
    h1 
      font-size 30px
    p 
      font-size 18px
  
//drak one
.section-dark
  color #fff
  background-color #000

//white one
.section-white
  padding 100px 0px
  color #000
  background-color #fff

.centered
  left 50%
  top 50%
  position absolute
  text-align center
  transform translate(-50%, -50%)